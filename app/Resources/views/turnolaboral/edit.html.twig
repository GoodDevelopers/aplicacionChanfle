{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <h1 class="h1 text-center marginTitulo">TurnoLaboral edit</h1>
        </div>

        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                {{ form_start(edit_form,{'attr':{'id':'formulario'}}) }}
                <div class="form-group">
                    {{form_label(edit_form.empleado, 'Empleado:')}}
                    {{ form_widget(edit_form.empleado , {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{form_label(edit_form.cargo, 'Cargo:')}}
                    {{ form_widget(edit_form.cargo, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg btn-warning">Editar <span class="glyphicon glyphicon-edit"></span></button>
                </div>
                {{ form_end(edit_form) }}

                <ul class="list-inline text-center">
                    <li>
                        <a href="{{ path('turnolaboral_index') }}" class="btn btn-info">Lista <span class="glyphicon glyphicon-th-list"></span></a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-floppy-remove"></span></button>
                            {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
{% block  javascripts %}
    {{parent()}}
    <script>
        $('#formulario').validate({
            highlight: function (element) {
                $(element).closest('.form-group').removeClass('has-success').addClass('has-error');
                $(element).fadeOut(function () {
                    $(element).fadeIn();
                });
            },
            unhighlight: function (element) {
                $(element).closest('.control-group').removeClass('error').addClass('success');
            }
        });

        $('#turno_laboral_empleado').rules("add", {
            required: true,
            messages: {
                required: "<label class='control-label' for='inputError'><span class='glyphicon glyphicon-remove-sign'></span>Seleccione un empleado</label>"
            }
        });
        $('#turno_laboral_cargo').rules("add", {
            required: true,
            messages: {
                required: "<label class='control-label' for='inputError'><span class='glyphicon glyphicon-remove-sign'></span>Seleccione un empleado</label>"
            }
        });
    </script>
{% endblock %}

