{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="h1 text-center marginTitulo">Materia Prima <span class="icon-listaMateria"></span></h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th class="text-right">Nombre:</th>
                            <td>{{ materiaPrima.nombre }}</td>
                        </tr>
                        <tr>
                            <th class="text-right">Unidad de Medida:</th>
                            <td>{{ materiaPrima.unidadDeMedida }}</td>
                        </tr>
                        <tr>
                            <th class="text-right">Cantidad:</th>
                            <td>{{ materiaPrima.cantidad }}</td>
                        </tr>
                        <tr>
                            <th class="text-right">Valor Unitario:</th>
                            <td>{{ materiaPrima.precio }}</td>
                        </tr>
                        <tr>
                            <th class="text-right">Stock MÃ­nimo:</th>
                            <td>{{ materiaPrima.stockMinimo }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <ul class="list-inline text-center">
                    <li>
                        <a href="{{ path('materiaprima_index') }}" class="btn btn-info">Lista <span class="glyphicon glyphicon-th-list"></span></a>
                    </li>
                    <li>
                        <a href="{{ path('materiaprima_edit', { 'id': materiaPrima.id }) }}" class="btn btn-warning" role="button">Editar <span class="glyphicon glyphicon-edit"></span></a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger">Eliminar <span class="glyphicon glyphicon-floppy-remove"></span></button>
                            {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        $(document).on('ready', inicio());

        function inicio() {
            $('#inventario').addClass('active');
        }
    </script>
{% endblock%}